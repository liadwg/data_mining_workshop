select  id,
        name,
        case when picture.url is null and picture.data is null then 0 else 1 end as has_profile_photo,
        case when cover.coverId is null then 0 else 1 end as has_cover_photo,
        location,
        currentLocation, current_location,
        hometown,
        phone,
        emails,
        website,
        founded,
        description,
        startInfo, start_info,
        generalInfo, general_info,
        isPermanentlyClosed, is_permanently_closed,
        isUnclaimed, is_unclaimed,
        isVerified, is_verified,
        priceRange, price_range,
        products,
        fanCount,
        talkingAboutCount, talking_about_count,
        wereHereCount, were_here_count,
        likes,
        category,
        case when bio is null then 0 else 1 end as has_bio,
        case when birthday is null then 0 else 1 end as has_birthday,
        case when companyOverview is null and company_overview is null then 0 else 1 end as has_company_overview,
        case when about is null then 0 else 1 end as has_about,
        case when hours is null then 0 else 1 end as has_hours,
        checkins,
        case when paymentOptions is null and payment_options is null then 0 else 1 end as has_payment_options,
        search_category,
        case when mission is null then 0 else 1 end as has_mission,
        case when categoryList is null then size(category_list) else size(categoryList) end as category_list_len
from pages_raw